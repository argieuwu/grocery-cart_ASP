<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GroceryCart - Home</title>
    <link rel="stylesheet" href="~/css/homepage.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>

    <main>
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-content">
                <h1>Fresh Groceries at Your Doorstep</h1>
                <p>Enjoy unbeatable discounts and premium quality products.</p>
                <a href="@Url.Action("Shopnow", "Categories")" class="btn btn-hero">
                    <i class="fas fa-shopping-cart"></i> Shop Now
                </a>
            </div>
        </section>

        <!-- Category Highlights Section -->
        <section class="categories-section">
            <h2>Explore Categories</h2>
            <div class="categories-container">
                <div class="category-card">
                    <img src="~/images/fruitsandvegetables1.jpg" alt="Fruits & Vegetables">
                    <h4>Fruits & Vegetables</h4>
                </div>
                <div class="category-card">
                    <img src="~/images/meatnseafood.jpeg" alt="Meat & Seafood">
                    <h4>Meat & Seafood</h4>
                </div>
                <div class="category-card">
                    <img src="~/images/dairyneggs.jpg" alt="Dairy & Eggs">
                    <h4>Dairy & Eggs</h4>
                </div>
                <div class="category-card">
                    <img src="~/images/snacksnbeverages.jpg" alt="Snacks & Beverages">
                    <h4>Snacks & Beverages</h4>
                </div>
            </div>
        </section>

        <!-- Popular Products Section -->
        <section class="popular-products-section">
            <h2>Trending Products</h2>
            <div class="product-container">
                <div class="product-card">
                    <img src="~/images/fishmeat.jpg" alt="Fish Meat">
                    <h4>Fish Meat</h4>
                    <p>$10.99</p>
                    <a href="#" class="btn btn-add-to-cart">
                        <i class="fas fa-cart-plus"></i> Add to Cart
                    </a>
                </div>
                <div class="product-card">
                    <img src="~/images/porkmeat.jpg" alt="Pork Meat">
                    <h4>Pork Meat</h4>
                    <p>$12.49</p>
                    <a href="#" class="btn btn-add-to-cart">
                        <i class="fas fa-cart-plus"></i> Add to Cart
                    </a>
                </div>
                <div class="product-card">
                    <img src="~/images/chickenmeatsu.jpg" alt="Chicken Meat">
                    <h4>Chicken Meat</h4>
                    <p>$8.99</p>
                    <a href="#" class="btn btn-add-to-cart">
                        <i class="fas fa-cart-plus"></i> Add to Cart
                    </a>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <p>&copy; 2024 GroceryCart. Designed with ❤️</p>
            <ul class="footer-links">
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
            </ul>
        </div>
    </footer>
</body>
</html>
