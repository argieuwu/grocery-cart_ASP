<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GroceryCart - Home</title>
    <link rel="stylesheet" href="~/css/homepage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <!-- Navbar -->
    <header>
        <nav class="navbar">
            <div class="container">
                <a href="#" class="logo">GroceryCart</a>
               
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        <!-- Welcome Section -->
        <section class="welcome-section">
            <h1>Welcome to GroceryCart!</h1>
            <p>Your one-stop shop for all grocery needs. Find fresh produce, quality meats, and household essentials in one place.</p>
            <a href="#categories" class="btn btn-shop-now">Shop Now</a>
        </section>

        <!-- Categories Section -->
        <section id="categories" class="categories-section">
            <h2>Shop by Category</h2>
            <div class="categories-container">
                <div class="category-card">
                    <img src="path/to/fruit-vegetables.jpg" alt="Fruits & Vegetables">
                    <h3>Fruits & Vegetables</h3>
                </div>
                <div class="category-card">
                    <img src="path/to/meat.jpg" alt="Meat & Seafood">
                    <h3>Meat & Seafood</h3>
                </div>
                <div class="category-card">
                    <img src="path/to/dairy.jpg" alt="Dairy & Eggs">
                    <h3>Dairy & Eggs</h3>
                </div>
                <div class="category-card">
                    <img src="path/to/snacks.jpg" alt="Snacks & Beverages">
                    <h3>Snacks & Beverages</h3>
                </div>
            </div>
        </section>

        <!-- Featured Products Section -->
        <section class="featured-section">
            <h2>Featured Products</h2>
            <div class="featured-container">
                <div class="product-card">
                    <img src="path/to/product1.jpg" alt="Product 1">
                    <h3>Product Name</h3>
                    <p>$10.99</p>
                    <a href="#" class="btn btn-add-to-cart">Add to Cart</a>
                </div>
                <div class="product-card">
                    <img src="path/to/product2.jpg" alt="Product 2">
                    <h3>Product Name</h3>
                    <p>$12.49</p>
                    <a href="#" class="btn btn-add-to-cart">Add to Cart</a>
                </div>
                <div class="product-card">
                    <img src="path/to/product3.jpg" alt="Product 3">
                    <h3>Product Name</h3>
                    <p>$8.99</p>
                    <a href="#" class="btn btn-add-to-cart">Add to Cart</a>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <p>&copy; 2024 GroceryCart. All rights reserved.</p>
            <ul class="footer-links">
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms of Service</a></li>
            </ul>
        </div>
    </footer>
</body>
</html>
